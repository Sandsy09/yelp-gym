<% layout('layouts/boilerplate') %>
<h1>All Gyms</h1>
<div>
    <a href="/gyms/new">New Gym</a>
</div>


<% for (let gym of gyms) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= gym.image %>" alt="Gym Card Image" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= gym.title %></h5>
                    <p class="card-text"><%= gym.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= gym.location %></small>
                    </p>
                    <a href="/gyms/<%= gym.id %>" class="btn btn-primary">View <%= gym.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>